{
  "compilerOptions": {
    "target": "ES5",
    "module": "ESNext",
    "jsx": "react-jsx",
    "declaration": true,
    "declarationDir": "dist/types",
    "emitDeclarationOnly": false,
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "isolatedModules": false,
    "resolveJsonModule": true,
    "lib": ["dom", "esnext"]
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "example", "**/*.test.ts", "**/*.test.tsx"]
}
